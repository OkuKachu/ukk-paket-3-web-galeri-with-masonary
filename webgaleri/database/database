CREATE DATABASE db_galeri;

CREATE TABLE User (
    UserID INT(11) AUTO_INCREMENT PRIMARY KEY,
    Username VARCHAR(255) NOT NULL,
    Password VARCHAR(255) NOT NULL,
    Email VARCHAR(255) NOT NULL,
    NamaLengkap VARCHAR(255) NOT NULL,
    Alamat TEXT NOT NULL
);
CREATE TABLE Album (
    AlbumID INT(11) AUTO_INCREMENT PRIMARY KEY,
    NamaAlbum VARCHAR(255) NOT NULL,
    Deskripsi TEXT NOT NULL,
    TanggalDibuat DATE NOT NULL,
    UserID INT(11) NOT NULL,
    FOREIGN KEY (UserID) REFERENCES User(UserID)
);
CREATE TABLE Foto (
    FotoID INT(11) AUTO_INCREMENT PRIMARY KEY,
    JudulFoto VARCHAR(255) NOT NULL,
    Deskripsi TEXT NOT NULL,
    TanggalUnggah DATE NOT NULL,
    Gambar VARCHAR(255) NOT NULL,
    Album_ID INT(11) NOT NULL,
    UserID INT(11) NOT NULL,
    FOREIGN KEY (Album_ID) REFERENCES Album(AlbumID),
    FOREIGN KEY (UserID) REFERENCES User(UserID)
);
CREATE TABLE Komentar (
    KomentarID INT(11) AUTO_INCREMENT PRIMARY KEY,
    FotoID INT(11) NOT NULL,
    UserID INT(11) NOT NULL,
    IsiKomentar TEXT NOT NULL,
    TanggalKomentar DATE NOT NULL,
    FOREIGN KEY (FotoID) REFERENCES Foto(FotoID),
    FOREIGN KEY (UserID) REFERENCES User(UserID)
);
CREATE TABLE `Like` (
    LikeID INT(11) AUTO_INCREMENT PRIMARY KEY,
    FotoID INT(11) NOT NULL,
    UserID INT(11) NOT NULL,
    TanggalLike DATE NOT NULL,
    FOREIGN KEY (FotoID) REFERENCES Foto(FotoID),
    FOREIGN KEY (UserID) REFERENCES User(UserID)
);


